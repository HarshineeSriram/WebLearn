<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.beta.android.aakashresearchlabs.test.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="@drawable/homebackground">

    <TextView
        android:id="@+id/textView"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:paddingTop="20dp"
        android:text="WebLearn"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        android:textSize="90sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/button3"
        android:layout_width="368dp"
        android:layout_height="65dp"
        android:layout_marginTop="25dp"
        android:background="#95424242"
        android:text="Basics"
        android:textSize="45dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="368dp"
        android:layout_height="65dp"
        android:layout_marginTop="1dp"
        android:background="#95616161"
        android:text="Git basics"
        android:textSize="45dp"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="368dp"
        android:layout_height="65dp"
        android:layout_marginTop="1dp"
        android:background="#95757575"
        android:text="Front End"
        android:textSize="45dp"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="368dp"
        android:layout_height="65dp"
        android:layout_marginTop="1dp"
        android:background="#959E9E9E"
        android:text="Back End"
        android:textSize="45dp"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="368dp"
        android:layout_height="65dp"
        android:layout_marginTop="1dp"
        android:background="#95BDBDBD"
        android:text="Frameworks"
        android:textSize="45dp"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="368dp"
        android:layout_height="65dp"
        android:layout_marginTop="1dp"
        android:background="#95E0E0E0"
        android:text="Important"
        android:textSize="45dp"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        tools:layout_editor_absoluteX="8dp" />
</android.support.constraint.ConstraintLayout>
